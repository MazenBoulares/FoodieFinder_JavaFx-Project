<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javefx_project_v3.Controllers.LoginControllerV2">
   <padding>
      <Insets top="25" right="25" bottom="25" left="25"/>
   </padding>

   <Label text="Login" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">

   </Label>

   <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
   <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

   <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
   <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

   <Button text="Login" onAction="#handleLoginButtonAction" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>
